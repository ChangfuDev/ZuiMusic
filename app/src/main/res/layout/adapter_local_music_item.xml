<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_local_song_item_bg"
    android:clickable="true"
    android:paddingLeft="15dp">

    <ImageView
        android:id="@+id/iv_local_song_item_playing"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/icon_playing"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/ll_local_song_item_more"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:background="@drawable/list_icn_more" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/ll_local_song_item_more"
        android:layout_toRightOf="@+id/iv_local_song_item_playing"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/tv_local_song_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="情非得已"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_size_15" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_local_song_item_sq"
                android:layout_width="13dp"
                android:layout_height="8dp"
                android:layout_marginRight="2dp"
                android:background="@drawable/icon_sq"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_local_song_item_author_album"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="庾澄庆 - 海啸"
                android:textColor="@color/Gray"
                android:textSize="@dimen/text_size_11" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_local_song_item_divider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/colorGray" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_widget_zedittext_clear"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/selector_back_bg"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_widget_clear"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/et_clear" />

        </LinearLayout>

        <EditText
            android:id="@+id/et_widget_zedittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toLeftOf="@+id/ll_widget_zedittext_clear"
            android:background="@null"
            android:textColor="@color/colorGray"
            android:textColorHint="@color/Gray"
            android:textSize="@dimen/mid_large_text_size" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_widget_zedittext_bottom_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/Gray" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_local_music_none"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_local_music_none"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="38dp"
            android:background="@drawable/local_music_none" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="@string/local_music_none"
            android:textColor="@color/Gray" />

        <TextView
            android:id="@+id/tv_local_music_scan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/selector_local_music_scan"
            android:clickable="true"
            android:gravity="center"
            android:padding="10dp"
            android:text="一键扫描"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/big_text_size" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <somebody_z.me.zuimusic.widget.indexbar.IndexableLayout
            android:id="@+id/il_local_song"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/top_height"
            app:indexBar_background="@drawable/shape_index_bar_bg"
            app:indexBar_layout_width="20dp"
            app:indexBar_textColor="@color/colorWhite"
            app:indexBar_textSize="@dimen/small_text_size"
            app:indexBar_textSpace="8dp" />

    </FrameLayout>

</LinearLayout>